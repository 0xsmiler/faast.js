{
    "name": "cloudify",
    "version": "0.0.2",
    "description": "Serverless without the cruft.",
    "main": "build/src/cloudify.js",
    "types": "build/src/cloudify.d.ts",
    "scripts": {
        "build": "yarn clean && tsc",
        "watch": "tsc --watch",
        "test-local": "yarn build && jest build/test/*-local.test.js",
        "test": "yarn build && jest",
        "clean": "rm -rf build"
    },
    "author": "",
    "license": "ISC",
    "engines": {
        "node": "6.11.5"
    },
    "dependencies": {
        "archiver": "^2.1.1",
        "aws-sdk": "^2.243.1",
        "axios": "^0.18.0",
        "debug": "^3.1.0",
        "googleapis": "^30.0.0",
        "human-stringify": "^0.2.3",
        "memory-fs": "^0.4.1",
        "source-map-support": "^0.5.6",
        "tslib": "^1.9.1",
        "uuid": "^3.2.1",
        "webpack": "^4.8.1",
        "webpack-node-externals": "^1.7.2"
    },
    "devDependencies": {
        "@types/archiver": "^2.1.1",
        "@types/debug": "^0.0.30",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.2.3",
        "@types/loader-utils": "^1.1.3",
        "@types/memory-fs": "^0.3.0",
        "@types/node": "^10.1.0",
        "@types/uuid": "^3.4.3",
        "@types/webpack": "^4.1.5",
        "@types/webpack-node-externals": "^1.6.3",
        "jest": "^23.1.0",
        "typescript": "^2.9.1",
        "webpack-cli": "^2.1.3"
    },
    "jest": {
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "roots": [
            "build/test"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules"
        ]
    }
}
