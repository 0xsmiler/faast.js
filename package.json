{
    "name": "cloudify",
    "version": "0.0.2",
    "description": "Serverless without the cruft.",
    "main": "build/src/cloudify.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/acchou/cloudify"
    },
    "types": "build/src/cloudify.d.ts",
    "scripts": {
        "build": "npm run clean && tsc",
        "watch": "npm run clean && tsc --watch",
        "test-local": "npm run build && jest build/test/*-local.test.js",
        "test": "npm run build && jest test/",
        "test-slow": "npm run build && jest test-slow/",
        "test-other": "npm run build && jest test-other/",
        "clean": "rm -rf build",
        "tslint": "tslint -p tsconfig.json"
    },
    "author": "Andy Chou",
    "license": "ISC",
    "dependencies": {
        "archiver": "^3.0.0",
        "aws-sdk": "^2.243.1",
        "axios": "^0.18.0",
        "commander": "^2.15.1",
        "debug": "^4.1.0",
        "googleapis": "^34.0.0",
        "inquirer": "^6.0.0",
        "jszip": "^3.1.5",
        "libnmap": "^0.4.11",
        "listr": "^0.14.2",
        "memory-fs": "^0.4.1",
        "ora": "^3.0.0",
        "rimraf": "^2.6.2",
        "supports-color": "^5.4.0",
        "tslib": "^1.9.1",
        "uuid": "^3.2.1",
        "webpack": "^4.8.1",
        "webpack-node-externals": "^1.7.2",
        "yauzl": "^2.10.0"
    },
    "devDependencies": {
        "@types/archiver": "^2.1.1",
        "@types/aws-lambda": "^8.10.6",
        "@types/debug": "^0.0.31",
        "@types/express": "^4.11.1",
        "@types/inquirer": "^0.0.43",
        "@types/jest": "^23.3.1",
        "@types/jszip": "^3.1.4",
        "@types/listr": "^0.13.0",
        "@types/loader-utils": "^1.1.3",
        "@types/memory-fs": "^0.3.0",
        "@types/node": "^10.1.0",
        "@types/ora": "^1.3.4",
        "@types/rimraf": "^2.0.2",
        "@types/supports-color": "^5.3.0",
        "@types/tar-stream": "^1.6.0",
        "@types/uuid": "^3.4.3",
        "@types/webpack": "^4.1.5",
        "@types/webpack-node-externals": "^1.6.3",
        "@types/yauzl": "^2.9.0",
        "jest": "^23.1.0",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^3.0.0",
        "webpack-cli": "^3.1.0"
    },
    "jest": {
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "roots": [
            "build/test",
            "build/test-slow"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules"
        ],
        "testEnvironment": "node"
    }
}
