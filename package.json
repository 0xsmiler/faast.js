{
    "name": "cloudify",
    "version": "0.0.2",
    "description": "Serverless without the cruft.",
    "main": "build/cloudify.js",
    "types": "build/cloudify.d.ts",
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "test-bundle": "node build/index.js --test",
        "test-deploy-google":
            "npm run test-bundle && rm -rf tmp && mkdir tmp && mv dist-google.zip tmp && functions start && cd tmp && unzip -o dist-google.zip && functions deploy trampoline --trigger-http",
        "posttest-deploy-google":
            "functions call trampoline --data='{\"name\": \"hello\", \"args\": [\"world\"]}' && functions stop",
        "test": "jest"
    },
    "author": "",
    "license": "ISC",
    "engines": {
        "node": "6.11.5"
    },
    "dependencies": {
        "archiver": "^2.1.1",
        "aws-sdk": "^2.243.1",
        "axios": "^0.18.0",
        "debug": "^3.1.0",
        "googleapis": "^30.0.0",
        "human-stringify": "^0.2.3",
        "memory-fs": "^0.4.1",
        "source-map-support": "^0.5.6",
        "tslib": "^1.9.1",
        "webpack": "^4.8.1",
        "webpack-node-externals": "^1.7.2"
    },
    "devDependencies": {
        "@types/archiver": "^2.1.1",
        "@types/debug": "^0.0.30",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.2.3",
        "@types/loader-utils": "^1.1.3",
        "@types/memory-fs": "^0.3.0",
        "@types/node": "^10.1.0",
        "@types/webpack": "^4.1.5",
        "@types/webpack-node-externals": "^1.6.3",
        "jest": "^22.4.3",
        "typescript": "^2.8.3",
        "webpack-cli": "^2.1.3"
    },
    "jest": {
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": ["js", "jsx", "json", "node"],
        "roots": ["build/test"],
        "testPathIgnorePatterns": ["<rootDir>/node_modules"]
    }
}
